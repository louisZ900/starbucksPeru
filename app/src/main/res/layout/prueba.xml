<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:filterTouchesWhenObscured="true">

        <include layout="@layout/sb_view_main_simple_toolbar" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView_container"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_empty_cards"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/imageView_card"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="@dimen/sb_app_spacing_xlarge"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="@dimen/sb_app_spacing_xlarge"
                        android:contentDescription="@null"
                        android:scaleType="fitCenter"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/sb_app_background_card" />

                    <TextView
                        android:id="@+id/textView_description_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="16dp"
                        android:text="@string/sb_card_text_description_add_card"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView_card" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/SbAppButtons_DialogButton_white"
                        android:id="@+id/button_register_card"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/sb_app_spacing_normal"
                        android:layout_marginStart="@dimen/sb_app_spacing_normal"
                        android:text="@string/sb_button_gift_card"
                        app:layout_constraintTop_toBottomOf="@id/textView_description_card"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_cards_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:descendantFocusability="blocksDescendants">

                    <TextView
                        android:id="@+id/textView_name"
                        style="@style/SbAppLabels_wallet_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/sb_app_spacing_normal"
                        android:layout_marginTop="@dimen/sb_app_spacing_20dp"
                        android:layout_marginEnd="@dimen/sb_app_spacing_normal"
                        tools:text="Clara Vainilla"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView_credit_wallet"
                        style="@style/SbAppLabels_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="@dimen/sb_app_spacing_small"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="0dp"
                        tools:text="$ 0.00"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView_name" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        style="@style/SbAppButtons_ImageButton"
                        android:id="@+id/imageView_reload"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="@dimen/sb_app_spacing_small"
                        android:layout_marginBottom="@dimen/sb_app_spacing_2dp"
                        android:contentDescription="@null"
                        android:padding="2dp"
                        app:layout_constraintBottom_toBottomOf="@+id/textView_credit_wallet"
                        app:layout_constraintStart_toEndOf="@+id/textView_credit_wallet"
                        android:src="@drawable/sb_app_ic_refresh" />

                    <TextView
                        android:id="@+id/textView_wallet_date"
                        style="@style/SbAppLabels_wallet_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/sb_app_spacing_normal"
                        android:layout_marginTop="@dimen/sb_app_spacing_12dp"
                        android:textColor="@color/sb_base_black"
                        tools:text="a partir de las 11:25 a.m."
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView_credit_wallet"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/sb_app_card_edit_button"
                        style="@style/SbAppButtons_TextButton.Edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/sb_app_spacing_normal"
                        android:layout_marginBottom="@dimen/sb_app_spacing_small"
                        android:text="@string/sb_wallet_edit"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/imageView_main_starbucks_card"/>

                    <ImageView
                        android:id="@+id/imageView_main_starbucks_card"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginStart="@dimen/sb_app_spacing_normal"
                        android:layout_marginTop="@dimen/sb_app_spacing_20dp"
                        android:layout_marginEnd="@dimen/sb_app_spacing_normal"
                        android:contentDescription="@null"
                        android:scaleType="fitCenter"
                        app:layout_constraintDimensionRatio="8:5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView_wallet_date" />

                    <TextView
                        style="@style/SbAppLabels_Subtitle_Gray.Black"
                        android:id="@+id/textView_more_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/sb_app_spacing_normal"
                        android:layout_marginTop="@dimen/sb_app_spacing_50dp"
                        android:text="@string/sb_wallet_more"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView_main_starbucks_card" />

                    <View
                        android:id="@+id/view_division"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/sb_app_spacing_normal"
                        android:background="@color/sb_black_12"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView_more_wallet" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycle_view_starbucks_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sb_app_spacing_normal"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginBottom="@dimen/sb_app_spacing_xhuge"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="2"
                        app:layout_constraintTop_toBottomOf="@+id/view_division"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:listitem="@layout/sb_view_starbucks_card"
                        tools:itemCount="4" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/button_cash_in"
            style="@style/SbAppButtons_Medium_Text_FloatingRoundButton"
            android:layout_width="wrap_content"
            android:layout_marginEnd="@dimen/sb_app_spacing_normal"
            android:layout_marginBottom="90dp"
            android:text="@string/sb_client_cash_in_button"
            app:layout_anchor="@id/nestedScrollView_container"
            app:layout_anchorGravity="bottom|right|end" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/button_pay"
            style="@style/SbAppButtons_Big_Text_FloatingRoundButton"
            android:layout_width="wrap_content"
            android:layout_marginEnd="@dimen/sb_app_spacing_normal"
            android:layout_marginBottom="@dimen/sb_app_spacing_normal"
            android:text="@string/sb_client_pay_button"
            app:layout_anchor="@id/nestedScrollView_container"
            app:layout_anchorGravity="bottom|right|end" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>