<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view_empty_toolbar"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:background="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/coordinatorLayout" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinatorLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_empty_toolbar"
            app:layout_constraintBottom_toBottomOf="parent">

            <include android:id="@+id/layout_home_toolbar_options"
                layout="@layout/sb_view_home_toolbar_options_order" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScrollView_container"
                android:fillViewport="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView_title"
                        style="@style/SbAppLabels_Subtitle_Gray.Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sb_customer_starbucks_rewards_title"
                        android:layout_marginTop="@dimen/sb_app_spacing_normal"
                        android:layout_marginStart="@dimen/sb_app_spacing_normal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_rewards"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:orientation="horizontal"
                        android:layout_marginStart="@dimen/sb_app_spacing_normal"
                        android:layout_marginEnd="@dimen/sb_app_spacing_normal"
                        android:paddingEnd="@dimen/sb_app_spacing_large"
                        android:paddingStart="0dp"
                        android:clipToPadding="false"
                        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintTop_toBottomOf="@id/textView_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:itemCount="3"
                        tools:listitem="@layout/sb_view_reward_item"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_promotions"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginTop="@dimen/sb_app_spacing_normal"
                        android:layout_marginBottom="@dimen/sb_app_spacing_huge"
                        app:layout_constraintTop_toBottomOf="@id/recycler_rewards"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:itemCount="2"
                        tools:listitem="@layout/sb_view_promotion_item"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/button_join_home"
                style="@style/SbAppButtons_Big_Text_FloatingRoundButton"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/sb_app_spacing_normal"
                android:layout_marginBottom="@dimen/sb_app_spacing_normal"
                android:text="@string/sb_customer_join_button"
                app:layout_anchor="@id/nestedScrollView_container"
                app:layout_anchorGravity="bottom|right|end" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>